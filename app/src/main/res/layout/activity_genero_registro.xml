<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#171212"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/text_genero_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Introducir los datos del nuevo género:"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:layout_margin ="8dp"/>

        <EditText
            android:id="@+id/text_input_genero_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del género"
            android:textSize="24sp"
            android:inputType="text"
            android:textColor="#B89E9E"
            android:background="#382929"
            android:layout_margin ="8dp"/>

        <ImageView
            android:id="@+id/imagen_genero"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:layout_margin ="8dp"/>

        <Button
            android:id="@+id/btn_seleccionar_imagen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seleccionar imagen"
            android:height="@dimen/button_height"
            android:color="#E82933"
            android:textColor="#FFFFFF"
            android:layout_margin ="8dp"/>

        <Button
            android:id="@+id/btn_enviar_genero_registro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registrar nuevo género"
            android:height="@dimen/button_height"
            android:color="#E82933"
            android:textColor="#FFFFFF"
            android:layout_margin ="8dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>